{
    "name": "__MSG_appName__",
    "short_name": "__MSG_appShortName__",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "chrome/chromereload.js",
            "chrome/background.js"
        ]
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "chrome/contentscript.js"
            ],
            "css": [
                "styles/launcher.css",
                "styles/databaseName.css"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "browser_action": {
        "default_icon": {
            "19": "images/icon-disabled-128.png",
            "38": "images/icon-disabled-128.png"
        },
        "default_popup": ""
    },
    "options_ui": {
        "page": "options/options.html",
        "chrome_style": true
    },
    "web_accessible_resources": [
        "sc_ext/sc_ext.js",
        "scripts/popup.js",
        "styles/main.css"
    ]
}