{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-128.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/sitecore/shell/Applications/Content%20Editor.aspx*",
    "https://*/sitecore/shell/Applications/Content%20Editor.aspx*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/sitecore/shell/Applications/Content%20Editor.aspx*",
        "https://*/sitecore/shell/Applications/Content%20Editor.aspx*"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-disabled-128.png",
      "38": "images/icon-disabled-128.png"
    },
    "default_popup": ""
  },
  "web_accessible_resources": [
    "scripts/sc_ext.js",
    "scripts/popup.js",
    "styles/main.css"
  ]
}