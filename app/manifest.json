{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/sc_ext-common.js",
        "scripts/contentscript.js"
      ],
      "css": [
        "styles/fieldSearch.css",
        "styles/launcher.css",
        "styles/databaseName.css"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-disabled-128.png",
      "38": "images/icon-disabled-128.png"
    },
    "default_popup": ""
  },
  "web_accessible_resources": [
    "scripts/sc_ext.js",
    "scripts/popup.js",
    "styles/main.css",
    "scripts/sc_ext-common.js",
    "scripts/fuzzy.min.js"
  ]
}